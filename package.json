{
  "name": "in-touch-icons",
  "version": "1.0.0",
  "description": "An Icon library for use with all In Touch apps based on ReactJS",
  "main": "/src/components/icons/InTouchIcons.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "repository": {
	"type": "git",
	"url": "https://github.com/in-touch-dev/icon-library"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-order": "^3.0.0",
    "stylelint-scss": "^3.8.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
	  "prettier --single-quote --write",
	  "stylelint --fix",
      "git add"
    ]
  },
  "keywords": [ "icons", "library", "In Touch", "In Touch Networks", "svg" ],
	 "author": "tommy ollerenshaw"
}
